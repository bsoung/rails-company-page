<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <META name="keywords" content="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

   <!--  check the nav partial for location variable -->
    <%= render "shared/nav", location: 'top' %>

<!--     if unsure route, use rake routes | grep logout  -->
   <!--  is_a? checks to make sure it's a User class from User model -->
   <%= login_helper %>

<!--     yield contains whatever content loads in after all the universal stuff above -->
    <%= yield %>

    <%= source_helper("application") %>

  </body>
</html>
