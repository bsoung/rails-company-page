<h1>Edit this portfolio item</h1>

<!-- reference portfolio item model with @portfolio_item - ALSO MUST MAKE AVAILABLE IN CONTROLLER BEFORE USING -->
<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle %>
  </div>


  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
