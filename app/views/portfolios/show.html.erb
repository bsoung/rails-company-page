<div class="container">
	<div class="row">
		<div class="col-md-7">
			<img src=<%= @portfolio_item.main_image %>></img>
		</div>

		<div class="col-md-5">
			<h1><%= @portfolio_item.title %></h1>

			<hr>

			<em><%= @portfolio_item.subtitle %></em>

			<p><%= @portfolio_item.body %></p>

			<hr>

			<!-- implementationt to show nested categories -->
			<h3>Technologies Used:</h3>

			<% @portfolio_item.technologies.each do |t| %>
				<p><%= t.name %></p>
			<% end %>

			
		</div>
	</div>
</div>











